<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AddFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            style="@style/AddHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Add Cartridge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            style="@style/AddText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Manufacturer"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_add_manu"
            app:layout_constraintStart_toStartOf="@+id/textView" />

        <EditText
            android:id="@+id/tv_add_manu"
            style="@style/AddText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="38dp"
            android:hint="Manufacturer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            style="@style/AddText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer       "
            app:layout_constraintBaseline_toBaselineOf="@+id/et_computer"
            app:layout_constraintStart_toStartOf="@+id/textView2" />

        <EditText
            android:id="@+id/et_computer"
            style="@style/AddText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="32dp"
            android:layout_marginTop="13dp"
            android:hint="Computer"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/tv_add_manu" />

        <TextView
            android:id="@+id/textView4"
            style="@style/AddText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cartridge        "
            app:layout_constraintBaseline_toBaselineOf="@+id/ed_cartridge"
            app:layout_constraintStart_toStartOf="@+id/textView3" />

        <EditText
            android:id="@+id/ed_cartridge"
            style="@style/AddText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="Cartridge"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/et_computer" />

        <TextView
            android:id="@+id/textView5"
            style="@style/AddText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Condition       "
            app:layout_constraintBaseline_toBaselineOf="@+id/ed_condition"
            app:layout_constraintStart_toStartOf="@+id/textView4" />

        <EditText
            android:id="@+id/ed_condition"
            style="@style/AddText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="Condition
"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/ed_cartridge" />

        <TextView
            android:id="@+id/textView6"
            style="@style/AddText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Part Number  "
            app:layout_constraintBaseline_toBaselineOf="@+id/ed_partNum"
            app:layout_constraintStart_toStartOf="@+id/textView5" />

        <EditText
            android:id="@+id/ed_partNum"
            style="@style/AddText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="Part number"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/ed_condition" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>